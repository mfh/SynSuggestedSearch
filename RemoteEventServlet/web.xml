<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app id="remote-event-service">
	<servlet>
		<servlet-name>RemoteEventService</servlet-name>
		<servlet-class>com.kana.synergy.comm.RemoteEventServlet</servlet-class>
        <!--load-on-startup>1</load-on-startup-->
        <display-name>Remote Event Servlet</display-name>
        <description>Remote Event Servlet</description>
	</servlet>

	<servlet-mapping>
		<servlet-name>RemoteEventService</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>RemoteEventService</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
